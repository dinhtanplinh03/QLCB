@model QLCB.Models.ChuyenBay
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Tạo chuyến bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tạo chuyến bay</h1>

@if (ViewBag.ValidationErrors != null)
{
    <div class="alert alert-danger">
        <strong>Các lỗi:</strong>
        <ul>
            @foreach (var field in ViewBag.ValidationErrors)
            {
                <li>
                    <strong>@field.Field</strong>
                    <ul>
                        @foreach (var msg in field.Errors)
                        {
                            <li>@msg</li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <strong>Lỗi:</strong> @ViewBag.ErrorMessage
    </div>
}

<form asp-area="Admin" asp-controller="ChuyenBay" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="MaChuyenBay" class="form-label"></label>
        <input asp-for="MaChuyenBay" class="form-control" />
        <span asp-validation-for="MaChuyenBay" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TenChuyenBay" class="form-label"></label>
        <input asp-for="TenChuyenBay" class="form-control" />
        <span asp-validation-for="TenChuyenBay" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ThoiGianKhoiHanh" class="form-label"></label>
        <input asp-for="ThoiGianKhoiHanh" type="datetime-local" class="form-control" />
        <span asp-validation-for="ThoiGianKhoiHanh" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ThoiGianDen" class="form-label"></label>
        <input asp-for="ThoiGianDen" type="datetime-local" class="form-control" />
        <span asp-validation-for="ThoiGianDen" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SoGhe" class="form-label"></label>
        <input asp-for="SoGhe" class="form-control" />
        <span asp-validation-for="SoGhe" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="GiaVe" class="form-label">Giá vé</label>
        <input asp-for="GiaVe" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="GiaVe" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaMayBay" class="form-label"></label>
        <select asp-for="MaMayBay" class="form-control" asp-items="@(new SelectList(ViewBag.MayBayList, "MaMayBay", "LoaiMayBay"))">
            <option value="">-- Chọn máy bay --</option>
        </select>
        <span asp-validation-for="MaMayBay" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaSanBayDi" class="form-label"></label>
        <select asp-for="MaSanBayDi" class="form-control" asp-items="@(new SelectList(ViewBag.SanBayDiList, "MaSanBay", "TenSanBay"))">
            <option value="">-- Chọn sân bay đi --</option>
        </select>
        <span asp-validation-for="MaSanBayDi" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaSanBayDen" class="form-label"></label>
        <select asp-for="MaSanBayDen" class="form-control" asp-items="@(new SelectList(ViewBag.SanBayDenList, "MaSanBay", "TenSanBay"))">
            <option value="">-- Chọn sân bay đến --</option>
        </select>
        <span asp-validation-for="MaSanBayDen" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Tạo chuyến bay" class="btn btn-primary" />
        <a asp-area="Admin" asp-controller="ChuyenBay" asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
