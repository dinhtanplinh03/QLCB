        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ThoiGianKhoiHanh)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ThoiGianDen)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ThoiGianDen)
        </dd>
        <dt class="col-sm-3">
