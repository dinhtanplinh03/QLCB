    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MaChuyenBay)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaChuyenBay)
        </dd>
        <dt class="col-sm-3">
