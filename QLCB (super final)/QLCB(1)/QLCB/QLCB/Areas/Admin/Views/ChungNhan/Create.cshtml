@model QLCB.Models.ChungNhan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm chứng nhận";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var danhSachNhanVien = ViewBag.DanhSachNhanVien as List<SelectListItem>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Mã chứng nhận</label>
        <input asp-for="MaChungNhan" class="form-control" />
        <span asp-validation-for="MaChungNhan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tên chứng nhận</label>
        <input asp-for="TenChungNhan" class="form-control" />
        <span asp-validation-for="TenChungNhan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ngày cấp</label>
        <input asp-for="NgayCap" class="form-control" type="date" />
        <span asp-validation-for="NgayCap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ngày hết hạn</label>
        <input asp-for="NgayHetHan" class="form-control" type="date" />
        <span asp-validation-for="NgayHetHan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nhân viên</label>
        <select asp-for="MaNhanVien" class="form-control" asp-items="danhSachNhanVien"></select>
        <span asp-validation-for="MaNhanVien" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
