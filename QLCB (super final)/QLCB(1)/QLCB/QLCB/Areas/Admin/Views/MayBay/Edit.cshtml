@model QLCB.Models.MayBay
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Cập nhật máy bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cập nhật máy bay</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaMayBay" />

            <div class="form-group mb-3">
                <label asp-for="LoaiMayBay" class="control-label"></label>
                <input asp-for="LoaiMayBay" class="form-control" />
                <span asp-validation-for="LoaiMayBay" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TamBay" class="control-label"></label>
                <input asp-for="TamBay" class="form-control" />
                <span asp-validation-for="TamBay" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="">-- Chọn trạng thái --</option>
                    <option value="Đang hoạt động">Đang hoạt động</option>
                    <option value="Bảo trì">Bảo trì</option>
                    <option value="Ngừng hoạt động">Ngừng hoạt động</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
