@model QLCB.Models.SanBay
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Cập nhật sân bay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cập nhật thông tin sân bay</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSanBay" />

            <div class="form-group">
                <label asp-for="TenSanBay" class="control-label"></label>
                <input asp-for="TenSanBay" class="form-control" />
                <span asp-validation-for="TenSanBay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ThanhPho" class="control-label"></label>
                <input asp-for="ThanhPho" class="form-control" />
                <span asp-validation-for="ThanhPho" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuocGia" class="control-label"></label>
                <input asp-for="QuocGia" class="form-control" />
                <span asp-validation-for="QuocGia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="">-- Chọn trạng thái --</option>
                    <option value="Hoạt động" selected="@(Model.TrangThai == "Hoạt động")">Hoạt động</option>
                    <option value="Bảo trì" selected="@(Model.TrangThai == "Bảo trì")">Bảo trì</option>
                    <option value="Đóng cửa" selected="@(Model.TrangThai == "Đóng cửa")">Đóng cửa</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
