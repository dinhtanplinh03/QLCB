@model QLCB.Models.SanBay
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm Sân Bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Sân Bay</h2>

<form asp-area="Admin" asp-controller="SanBay" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MaSanBay" class="control-label"></label>
        <input asp-for="MaSanBay" class="form-control" />
        <span asp-validation-for="MaSanBay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenSanBay" class="control-label"></label>
        <input asp-for="TenSanBay" class="form-control" />
        <span asp-validation-for="TenSanBay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThanhPho" class="control-label"></label>
        <input asp-for="ThanhPho" class="form-control" />
        <span asp-validation-for="ThanhPho" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuocGia" class="control-label"></label>
        <input asp-for="QuocGia" class="form-control" />
        <span asp-validation-for="QuocGia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="">-- Chọn trạng thái --</option>
            <option value="Hoạt động">Hoạt động</option>
            <option value="Bảo trì">Bảo trì</option>
            <option value="Đóng cửa">Đóng cửa</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-area="Admin" asp-controller="SanBay" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
