@model QLCB.Models.PhanCong
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm phân công";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var danhSachChuyenBay = ViewBag.DanhSachChuyenBay as List<SelectListItem>;
    var danhSachNhanVien = ViewBag.DanhSachNhanVien as List<SelectListItem>;
}

<h2>@ViewData["Title"]</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MaChuyenBay" class="control-label">Chuyến bay</label>
        <select asp-for="MaChuyenBay" class="form-control" asp-items="danhSachChuyenBay"></select>
        <span asp-validation-for="MaChuyenBay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaNhanVien" class="control-label">Nhân viên</label>
        <select asp-for="MaNhanVien" class="form-control" asp-items="danhSachNhanVien"></select>
        <span asp-validation-for="MaNhanVien" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
